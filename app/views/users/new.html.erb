<%= render 'layouts/errors', object: @user %>

<h3>Sign Up</h3>

<%= form_for User.new do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Join" %>

<% end %>
