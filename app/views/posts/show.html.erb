<div class="container">
  <div class="well">
    <h3><%= @post.name %></h3>
    <h6><%= @post.created_at %></h6>

    <p><%= @post.content %></p>
  </div>

  <%= link_to "Edit Post", edit_post_path(@post) %>
  <%= link_to "Destroy Post Forever", post_path(@post),
            :data => {:confirm => "Obliterate for eternity?!?", :method => "delete"} %>
  <%= link_to "Return", posts_path %>
</div>
