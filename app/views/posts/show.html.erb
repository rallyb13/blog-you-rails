<div class="container">
  <div class="well">
    <h3><%= @post.name %></h3>
    <h6><%= @post.created_at %> by <%= @post.user.email %></h6>

    <p><%= @post.content %></p>
  </div>

  <div class="comments">
    <ul class="comment_items">
      <%= render @post.comments %>
    </ul>
  </div>


  <%= link_to "Add Comment", new_post_comment_path(@post), id: "new_comment_link", class: "btn btn-md btn-success", remote: true %>
  <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-md btn-info" %>
  <%= link_to "Destroy Post Forever", post_path(@post),
            :data => {:confirm => "Obliterate for eternity?!?", :method => "delete"}, class: "btn btn-md btn-danger" %>
</div>
